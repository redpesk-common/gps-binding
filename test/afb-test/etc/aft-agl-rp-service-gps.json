{
    "id": "http://iot.bzh/download/public/schema/json/ctl-schema.json#",
    "$schema": "http://iot.bzh/download/public/schema/json/ctl-schema.json#",
    "metadata": {
        "uid": "Test",
        "version": "1.0",
        "api": "aft-rp-service-gps",
        "info": "rp-service-gps binding",
        "require": [
            "rp-service-gps"
        ]
    },
    "testVerb": [{
        "uid": "short",
        "info": "Launch the short session of tests",
        "action": "lua://AFT#_launch_test",
        "args": {
            "trace": "rp-service-gps",
            "files": "rp-service-gps.lua"
        }
    },
    {
        "uid": "long",
        "info": "Launch the long session of tests",
        "action": "lua://AFT#_launch_test",
        "args": {
            "trace": "rp-service-gps",
            "files": [ "rp-service-gps.lua", "mapi_tests.lua" ]
        }
    }],
    "mapis": [{
        "uid": "mapi-rp-service-gps",
        "info": "Faked rp-service-gps API",
        "libs": "mapi_rp-service-gps.lua",
        "verbs": [
            {
                "uid": "subscribe",
                "info": "Subscribe to events",
                "action": "lua://mapi-rp-service-gps#_subscribe"
            },
            {
                "uid": "unsubscribe",
                "info": "Unsubscribe previously suscribed events.",
                "action": "lua://mapi-rp-service-gps#_unsubscribe"
            },
            {
                "uid": "list",
                "info": "get message list",
                "action": "lua://mapi-rp-service-gps#_list"
            }
        ]
    }]
}
